<div class="container">
    <div class="row">
        {{#if error}}
            <div class="alert alert-danger" style="text-align: center;" role="alert">
                {{error}}
            </div>
        {{/if}}
        <div class="col-md-6 offset-3">
            <div class="card mt-3">
                <div class="card-body">
                    <form action="/admin/update/post/{{product._id}}" method="post">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" name="title" value="{{product.title}}" id="title">
                        </div>
                        <div class="mb-3">
                            <label for="amount" class="form-label">Amount</label>
                            <input type="number" class="form-control" name="amount" value="{{product.amount}}" id="amount">
                        </div>
                        <div class="mb-3">
                            <label for="discr" class="form-label">Description</label>
                            <textarea class="form-control" id="discr" rows="4" name="discr">{{product.discr}}</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
